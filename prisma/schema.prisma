generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

enum AttendanceStatus {
  HADIR
  IZIN
  TIDAK_HADIR
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  name      String?
  email     String?  @unique
  image     String?
  role      Role     @default(STUDENT)
  nim       String?  @unique

  accounts  Account[]
  sessions  Session[]

  emailVerified DateTime?

  // relations
  createdAttendanceSessions AttendanceSession[] @relation("AttendanceCreatedBy")
  attendance  AttendanceRecord[]

  createdAt DateTime @default(now())
}

model StudentRoster {
  id        String   @id @default(cuid()) @map("_id")
  nim       String   @unique
  fullName  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model AttendanceSession {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  startTime   DateTime
  endTime     DateTime
  latitude    Float
  longitude   Float
  radius      Int

  createdById String
  createdBy   User     @relation("AttendanceCreatedBy", fields: [createdById], references: [id])

  records     AttendanceRecord[]
  createdAt   DateTime @default(now())
}

model AttendanceRecord {
  id         String   @id @default(cuid()) @map("_id")
  userId     String
  sessionId  String
  status     AttendanceStatus @default(HADIR)
  attendedAt DateTime @default(now())

  user       User              @relation(fields: [userId], references: [id])
  session    AttendanceSession @relation(fields: [sessionId], references: [id])

  @@unique([userId, sessionId])
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id])
}
